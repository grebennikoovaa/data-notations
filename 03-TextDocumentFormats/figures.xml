<?xml version="1.0" encoding="UTF-8"?>
<geometricFigures>
    <figure>
        <name>Circle</name>
        <type>2D</type>
        <properties>
            <property>Radius</property>
            <property>Diameter</property>
        </properties>
        <formulas>
            <area>π * radius^2</area>
            <perimeter>2 * π * radius</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Square</name>
        <type>2D</type>
        <properties>
            <property>Side Length</property>
        </properties>
        <formulas>
            <area>side^2</area>
            <perimeter>4 * side</perimeter>
        </formulas>
    </figure>
    <figure>
        <name>Triangle</name>
        <type>2D</type>
        <propertis>
            <property>Side length</property>
            <property>Height</property>
        </propertis>
        <formulas>
            <area>(1/2) * (side * height)</area>
            <perimeter>side + side + side</perimeter>
        </formulas>
    </figure>
</geometricFigures>